<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="596.0" prefWidth="508.0" spacing="20.0" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ac.PrimaryController">
   <children>
      <TabPane prefHeight="316.0" prefWidth="468.0" tabClosingPolicy="UNAVAILABLE">
        <tabs>
          <Tab text="Tworzenie serwera">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <Button fx:id="createServerButton" layoutX="65.0" layoutY="61.0" mnemonicParsing="false" onAction="#openPort" prefHeight="54.0" prefWidth="151.0" text="Stwórz serwer" />
                        <TextArea fx:id="portText" layoutX="43.0" layoutY="132.0" prefHeight="95.0" prefWidth="383.0" />
                        <Button fx:id="connectServerButton" layoutX="244.0" layoutY="61.0" mnemonicParsing="false" onAction="#connectToPort" prefHeight="54.0" prefWidth="152.0" text="Połącz z serwerem" />
                        <Button fx:id="closeConnectionButton" layoutX="128.0" layoutY="239.0" mnemonicParsing="false" onAction="#stop" prefHeight="33.0" prefWidth="210.0" text="Zamknij połączenie" />
                     </children>
                  </AnchorPane>
            </content>
          </Tab>
          <Tab text="Przesyłanie">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <Button fx:id="sendButton" layoutX="57.0" layoutY="93.0" onAction="#sendFile" prefHeight="40.0" prefWidth="130.0" text="Send file" />
                        <Button fx:id="loadButton" layoutX="57.0" layoutY="36.0" mnemonicParsing="false" onAction="#loadFile" prefHeight="42.0" prefWidth="128.0" text="Load file to send" />
                        <Button fx:id="receiveButton" layoutX="277.0" layoutY="71.0" mnemonicParsing="false" onAction="#receiveFile" prefHeight="42.0" prefWidth="133.0" text="Receive file" />
                        <TextArea fx:id="fileText" layoutX="26.0" layoutY="142.0" prefHeight="125.0" prefWidth="418.0" />
                     </children>
                  </AnchorPane>
            </content>
          </Tab>
        </tabs>
      </TabPane>
      <Label fx:id="producers" prefHeight="33.0" prefWidth="480.0" text="Producers: Antoni Karwowski 229908 &amp; Michał Gebel 229879" textAlignment="CENTER">
         <font>
            <Font name="System Bold Italic" size="15.0" />
         </font>
      </Label>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
